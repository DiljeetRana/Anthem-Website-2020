                <label id="lblpage2tit" class="pagetitlbl" Style="font-size: 15px;margin-left: 5px;">Make this page visible</label>
                <br />
                <label id="lblpage2content" class="pagecontentlbl" style="font-size: 15px;font-weight:bold;">Content</label>
                <textarea id="txtpage2content" class="pagecontenttxt form-control">@Model.Page2Content</textarea>

            </fieldset>

        </div>


        <div class="col-md-6" style="margin-top: 10px">

            <fieldset>
                <legend>Page3</legend>
                <label id="lblpage3tit" class="pagetitlbl" Style="font-size: 15px;font-weight:bold;">Title</label>
