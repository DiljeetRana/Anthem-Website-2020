
@{
    ViewData["Title"] = "ContentManagement";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h5 style="color: #626262; float: left" runat="server">Manage Static Pages</h5>
<div style="margin-left: 1100px; margin-top: 10px; height: 40px;">
    <p runat="server" id="pusers" style="font-size: medium; color: #003366; font-weight: 600;"></p>
</div>

<form runat="server" style="margin-top:38px;">
    <div class="row" style="width: 100%">
        <div class="col-md-6">

            <fieldset>
                <legend>Page1</legend>
                <label id="lblpage1tit" class="pagetitlbl" Style="font-size: 15px;font-weight:bold;">Title</label>
                <input type="text" id="txtpage1tit" maxlength="20" class="pagetittxt form-control" value="@Model.Page1Title" />
                <br />
                @if (@Model.Page1Status == true)
                {
                    <input type="checkbox" id="chkpage1" class="pagetittxt pagevisibletxt" style="margin-left:140px;" checked />
                }
                else
                {
                    <input type="checkbox" id="chkpage1" class="pagetittxt pagevisibletxt" style="margin-left:140px;" />
                }
                <label id="lblpage2tit" class="pagetitlbl" Style="font-size: 15px;margin-left: 5px;">Make this page visible</label>
                <br />
                <label id="lblpage1content" class="pagecontentlbl" style="font-size: 15px;font-weight:bold;">Content</label>
                <textarea id="txtpage1content" class="pagecontenttxt form-control">@Model.Page1Content</textarea>
            </fieldset>


        </div>
        <div class="col-md-6">

            <fieldset>
                <legend>Page2</legend>
                <label id="lblpage2tit" class="pagetitlbl" Style="font-size: 15px;font-weight:bold;">Title</label>
