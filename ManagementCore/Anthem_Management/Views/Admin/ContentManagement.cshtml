                <textarea id="txtpage4content" class="pagecontenttxt form-control">@Model.Page4Content</textarea>
                <br />
            </fieldset>
        </div>

        <div class="col-md-6" style="margin-top: -9px">
            <fieldset>
                <legend>Page5</legend>
                <label id="lblpage5tit" class="pagetitlbl" Style="font-size: 15px;font-weight:bold;">Title</label>
                <input type="text" id="txtpage5tit" maxlength="20" class="pagetittxt form-control" value="@Model.Page5Title" />
