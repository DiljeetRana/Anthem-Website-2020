@model List<AnthemEntites.Client>
    @{
        int count = Model.Count;
    }
    <style>
       
         .grayscale {
        filter: grayscale(0%);
        -webkit-filter: grayscale(0%); /* For Webkit browsers */
        filter: gray; /* For IE 6 - 9 */
        -webkit-transition: all .6s ease; /* Transition for Webkit browsers */
    }

        .grayscale:hover {
            filter: grayscale(100%);
            -webkit-filter: grayscale(100%);
        }


       
           
    </style>
    <div id="clientRow" class="row" style="background: white; background-position: top; width: 100%; margin: 0px; padding: 0px 0 0px 0px;">
        <div class="col-md-12">
            <div class="clientslider" style="width: 100%;margin:0 0 0 -10px;">
                @for (int i = 0; i <= Model.Count; i++)
                {
                    if (i < count)
                    {
                        <div class="col-md-2 imgoverflow" style="text-align:center;">
                            <a href="@Model[i].WebsiteAddress" target="_blank">
                                <img src="http://management.antheminfotech.net/ClientImages/@Model[i].Logo1" alt="@Model[i].ClientName" title="@Model[i].ClientName" class="grayscale img-responsive" style="height:50px;vertical-align:middle;"/>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
